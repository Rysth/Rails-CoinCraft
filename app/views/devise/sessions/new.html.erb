<article class="w-full h-full bg-gray-100 sm:rounded-2xl">
  <header class="flex items-center justify-between w-full gap-2 text-sm text-center p-4 bg-[var(--CL-primary)] text-white rounded-t-xl h-14">
    <a href="<%=root_path%>">
      <i class="text-white text-md fa-solid fa-arrow-left"></i>
    </a>
    <h1 class="text-sm font-normal tracking-wider text-white uppercase pointer-events-none ">Log In</h1>
    <%= link_to 'Next', new_user_session_path %>
  </header>
  <div class="px-2 pt-5  text-[var(--CL-neutral)] h-max">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class:'w-full border-x-transparent border-y  border-t-2 border-gray-200 outline-1 focus:border-transparent focus:ring-0' %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class:'w-full border-x-transparent border-y  border-t-2 border-gray-200 outline-1 focus:border-transparent focus:ring-0' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="items-center w-full gap-3 mt-5 mb-5 text-sm field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="mt-5 actions">
        <%= f.submit "Log in", class: "p-2 text-sm bg-[var(--CL-primary)] w-full block text-white md:hover:bg-black md:hover:text-white md:transition tracking-wide text-center cursor-pointer" %>
      </div>
    <% end %>
    <fieldset class="mt-3">
      <%= render "devise/shared/links" %>
    </fieldset>
  </div>

</article>


