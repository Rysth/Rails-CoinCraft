<article class="relative w-full h-full bg-gray-100 sm:rounded-2xl">
  <header class="flex items-center justify-between w-full gap-2 text-sm text-center p-4 bg-[var(--CL-primary)] text-white sm:rounded-t-xl h-14">
    <a href="<%= categories_path %>" class="flex items-center gap-1">
      <i class="text-white text-md fa-solid fa-arrow-left"></i>
    </a>
    <h1 class="text-sm font-normal tracking-wider text-white uppercase pointer-events-none"><%= @category.name %></h1>
  </header>
  <div class="h-full overflow-auto max-h-[650px] sm:rounded-b-2xl">
    <h2 class="text-center bg-[var(--CL-neutral)] text-xl tracking-wider text-white uppercase pointer-events-none">TRANSACTIONS</h1>
    <header class="my-3 bg-white md:transition" >
      <div class="flex items-center gap-2 px-4 py-3">
        <picture class="w-12 h-12 ">
          <img src="<%= @category.icon %>" alt="icon" class="object-cover border rounded-md">
        </picture>
        <h3 class="text-base truncate text-ellipsis max-w-[10rem] font-normal"><%= @category.name %></h2>
        <p class="ml-auto text-2xl font-bold"><%= number_to_currency(@total_amount, precision: 2) %></p>
      </div>
    </header>
    <ul class="relative flex flex-col gap-3 p-0 py-3 list-none">
    <% if @movements %>
      <% @movements.each do |movement| %>
        <li class="bg-white md:hover:shadow-xl md:hover:-translate-y-1 md:active:scale-95 md:transition">
          <a href="<%= category_movement_path(movement.id) %>" class="flex items-center gap-2 p-2 px-4">
            <h4 class="text-sm truncate text-ellipsis max-w-[10rem] font-normal"><%= movement.name %></h2>
            <p class="ml-auto text-lg font-bold"><%= number_to_currency(movement.amount, precision: 2) %></p>
          </a>
        </li>
      <% end %>
    <% end %>
    </ul>
  </div>
  <div class="absolute mt-auto bottom-5 right-3">
    <%= link_to 'Add a New Transaction', new_category_movement_path(@category) , class: 'bg-[var(--CL-secondary)] md:active:scale-95 md:hover:-translate-y-1 md:hover:shadow-xl md:transition gap-2 p-2 text-white uppercase text-sm font-bold py-3 text-center block rounded-md' %>
  </div>
</article>